{
    "name": "Fujifilm X-Serie",
    "description": "Optimierte Einstellungen f√ºr Fujifilm X-Serie (X-T3, X-T4, X-T30, X-S10)",
    "type": "dslm",
    "interface": "gphoto2",
    "detection": {
        "method": "brand_model",
        "brand": "Fujifilm",
        "model": "X-*"
    },
    "settings": {
        "resolution": {
            "width": 6240,
            "height": 4160
        },
        "aperture": "f/4.0",
        "iso": "320",
        "shutter_speed": "1/125",
        "focus": "auto",
        "white_balance": "auto",
        "compression": "high",
        "film_simulation": "standard"
    },
    "preview": {
        "enabled": true,
        "resolution": {
            "width": 1920,
            "height": 1080
        },
        "update_interval": 500
    },
    "defaults": {
        "create_thumbnail": true,
        "save_directory": "photos/fuji",
        "file_format": "jpg"
    },
    "advanced": {
        "camera_config": {
            "viewfinder": 1,
            "autofocus": 1,
            "film_simulation": "provia",
            "capture_format": "jpeg",
            "image_stabilization": "on"
        },
        "usb_settings": {
            "transfer_mode": "PTP"
        }
    }
}
