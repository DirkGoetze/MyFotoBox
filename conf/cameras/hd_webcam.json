{
    "name": "HD Webcam",
    "description": "Hochauflösende Einstellungen für moderne Webcams",
    "type": "webcam",
    "interface": "opencv",
    "detection": {
        "method": "auto",
        "index": 0
    },
    "settings": {
        "resolution": {
            "width": 1920,
            "height": 1080
        },
        "fps": 30,
        "focus": "auto",
        "exposure": "auto",
        "white_balance": "auto",
        "compression": 95
    },
    "preview": {
        "resolution": {
            "width": 960,
            "height": 540
        },
        "fps": 30,
        "compression": 80
    },
    "defaults": {
        "create_thumbnail": true,
        "save_directory": "photos"
    }
}
