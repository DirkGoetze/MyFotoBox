{
    "name": "Panasonic LUMIX",
    "description": "Optimierte Einstellungen f√ºr Panasonic LUMIX-Serie (GH5, G9, S5)",
    "type": "dslm",
    "interface": "gphoto2",
    "detection": {
        "method": "brand_model",
        "brand": "Panasonic",
        "model": "LUMIX*"
    },
    "settings": {
        "resolution": {
            "width": 5184,
            "height": 3888
        },
        "aperture": "f/5.6",
        "iso": "200",
        "shutter_speed": "1/125",
        "focus": "auto",
        "white_balance": "auto",
        "compression": "high",
        "photo_style": "standard"
    },
    "preview": {
        "enabled": true,
        "resolution": {
            "width": 1920,
            "height": 1080
        },
        "update_interval": 400
    },
    "defaults": {
        "create_thumbnail": true,
        "save_directory": "photos/panasonic",
        "file_format": "jpg"
    },
    "advanced": {
        "camera_config": {
            "viewfinder": 1,
            "autofocus": 1,
            "photo_style": "standard",
            "capture_format": "jpeg",
            "image_stabilization": "on"
        },
        "usb_settings": {
            "transfer_mode": "PTP"
        }
    }
}
