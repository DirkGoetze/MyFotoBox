{
    "name": "Canon EOS R-Serie",
    "description": "Optimierte Einstellungen f√ºr Canon Spiegellose Kameras (EOS R, RP, R5, R6)",
    "type": "dslm",
    "interface": "gphoto2",
    "detection": {
        "method": "brand_model",
        "brand": "Canon",
        "model": "EOS R*"
    },
    "settings": {
        "resolution": {
            "width": 8192,
            "height": 5464
        },
        "aperture": "f/8.0",
        "iso": "200",
        "shutter_speed": "1/160",
        "focus": "auto",
        "white_balance": "auto",
        "compression": "high"
    },
    "preview": {
        "enabled": true,
        "resolution": {
            "width": 1920,
            "height": 1080
        },
        "update_interval": 400
    },
    "defaults": {
        "create_thumbnail": true,
        "save_directory": "photos/canon",
        "file_format": "jpg"
    },
    "advanced": {
        "camera_config": {
            "viewfinder": 1,
            "autofocus": 1,
            "picture_style": "neutral",
            "capture_format": "jpeg",
            "image_stabilization": "on"
        },
        "usb_settings": {
            "transfer_mode": "MTP"
        }
    }
}
